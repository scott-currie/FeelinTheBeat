<!DOCTYPE html>
<html>
   <%- include('../layout/head.ejs') %>
  <body>
    <%- include('../layout/header.ejs') %>
    <main>
      <img src="<%= image.fileName %>" id="upload">
      <div class="button" id="chooseFileBtn" style="">Select a New Picture</div>
      <div class="button" id="uploadFileBtn" style="visibility: hidden">Upload this Picture</div>
      <div class="button" id="getPlaylistBtn" style="">Get Your Custom Playlist</div>
      <!-- This is the photo upload form -->
      <form method='post' action='/upload' enctype="multipart/form-data">
        <div style='height: 0px;width:0px; overflow:hidden;'><input id="uploadFile" type="file" name="fileUploaded"></div>

        <% if(access_token && refresh_token) { %>
        <input type="hidden" name="access_token" value="<%=access_token%>">
        <input type="hidden" name="refresh_token" value="<%=refresh_token%>">
        <input type="hidden" name="userid" value="<%=userid%>">
        <% } %>
        <input id="submitUploadForm" class="formSubmit" type="submit" style="display:none">
      </form>
      <!-- Accept this image and submit form -->
      <form class="mood" method="post" action="/search">
        <fieldset>
          <input type="hidden" name="valence" value="<%= image.valence %>">
          <% if(access_token && refresh_token) { %>
          <input type="hidden" name="access_token" value="<%=access_token%>">
          <input type="hidden" name="refresh_token" value="<%=refresh_token%>">
          <input type="hidden" name="userid" value="<%=userid%>">
          <input type="hidden" name="img_url" value="<%=image.fileName%>">
          <% console.log(img_url); %>
          <% console.log(image.fileName); %>
          <% } %>
          <input type="submit" id="submitGetPlaylistForm" style="display:none">
        </fieldset>
      </form>
    </main>
    <%- include('../layout/footer.ejs')%>
    <script src='js/upload.js'></script>
  </body>
</html>
