<!DOCTYPE html>
<html>
<%- include('../layout/head.ejs') %>

<body>
  <%- include('../layout/header.ejs') %>
  <main>
    <div id="placeholder">
      <h2>Please upload a picture of your face.</h2>
    </div>
    <div class="button" id="chooseFileBtn" style="">Select a Picture</div>
    <!-- <div class="button" id="uploadFileBtn" style="visibility: hidden;">Upload this Picture</div> -->
    <!-- This is the photo upload form -->
    <form method='post' action='/upload' enctype="multipart/form-data">
      <div style='height: 0px;width:0px; overflow:hidden;'><input id="uploadFile" type="file" name="fileUploaded"></div>
      <% if(access_token && refresh_token) { %>
      <input type="hidden" name="access_token" value="<%=access_token%>">
      <input type="hidden" name="refresh_token" value="<%=refresh_token%>">
      <input type="hidden" name="userid" value="<%=userid%>">
      <% } %>
      <input type="submit" id="submitUploadForm" style="display:none">
    </form>
  </main>
  <%- include('../layout/footer.ejs')%>
  <script src="js/upload.js"></script>
</body>

</html>